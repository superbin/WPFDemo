<Window x:Class="WpfDemos.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemos"
        mc:Ignorable="d"
        Title="ProgressBar" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Progress at 20%"/>
        <ProgressBar Height="30" Margin="0 10" Minimum="0" Maximum="100" Value="20"/>
        <TextBlock Text="Progress at 70%"/>
        <ProgressBar Height="30" Margin="0 10" Minimum="0" Maximum="100" Value="70"/>
        <TextBlock Text="Progress at indeterminate"/>
        <ProgressBar Height="30" Margin="0 10" Minimum="0" Maximum="100" IsIndeterminate="True"/>

    </StackPanel>
</Window>
